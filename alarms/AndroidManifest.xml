<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feathernet.todo"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.feathernet.todo.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.feathernet.todo.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
        
         <activity android:name="com.feathernet.todo.HelpActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
         
          <activity android:name="com.feathernet.todo.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
          
          <activity android:name="com.feathernet.todo.AddToDoActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
          
          <activity android:name="com.feathernet.todo.ViewToDo"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" ></activity>
          
          <activity
            android:name="com.feathernet.todo.NotificationActivity"
            android:theme="@android:style/Theme.Translucent" />
            
   		 <service android:name="com.feathernet.todo.alarms.AlarmServiceClass" />
    </application>

</manifest>